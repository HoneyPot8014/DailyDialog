<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_icon_happy"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icon_happy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/splash_icon_angry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_icon_angry"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icon_angry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/splash_icon_love"
        app:layout_constraintStart_toEndOf="@id/splash_icon_happy"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_icon_love"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icon_love"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/splash_icon_sad"
        app:layout_constraintStart_toEndOf="@id/splash_icon_angry"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_icon_sad"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icon_sad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/splash_icon_surprised"
        app:layout_constraintStart_toEndOf="@id/splash_icon_love"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_icon_surprised"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_surprised"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/splash_icon_sad"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>